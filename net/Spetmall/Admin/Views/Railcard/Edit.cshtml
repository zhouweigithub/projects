<body class="iframebody">
    <div style=" padding:50px;">
        <form class="pad15" action="?">
            <input name="railcardid" type="hidden" value="@ViewBag.railcardid" />
            <ul class="formlist">
                <li>
                    <label class="lbt"><em>(*)</em>使用次数：</label><div>
                        @*<input name="use_number" class="form-control" type="text" placeholder="请输入冲值金额" value="1">*@
                        @Html.TextBoxFor(a => a.times, new { @class = "form-control", placeholder = "请输入使用次数" })
