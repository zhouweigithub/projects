@{
    ViewBag.Title = "充值";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>充值</title>
    <link rel="stylesheet" type="text/css" href="/static/css/common.css?v=@HttpContext.Current.Application["ver"]">
    <link rel="stylesheet" type="text/css" href="/static/css/ui-dialog.css?v=@HttpContext.Current.Application["ver"]">
    <script type="text/javascript" src="/static/js/jquery-1.12.2.min.js?v=@HttpContext.Current.Application["ver"]"></script>
    <script src="/static/js/artDialog.source.js?v=@HttpContext.Current.Application["ver"]"></script>
    <script src="/static/js/iframeTools.source.js?v=@HttpContext.Current.Application["ver"]"></script>
    <script src="/static/js/iframe.js?v=@HttpContext.Current.Application["ver"]"></script>
    <script src="/static/js/common.js?v=@HttpContext.Current.Application["ver"]"></script>
    <script src="/Scripts/common.js?v=@HttpContext.Current.Application["ver"]"></script>
    <style>
        .mid {
            vertical-align: -webkit-baseline-middle;
        }
    </style>
</head>
<body class="iframebody">
    <div style=" padding:20px;">
        <form class="pad15" action="?">
            <input name="memberid" type="hidden" value="@ViewBag.MemberId">
            <ul class="formlist">
                <li><label class="lbt"><em>(*)</em>会员姓名：</label><div><span class="mid">@ViewBag.Name</span></div></li>
                <li>
                    <label class="lbt"><em>(*)</em>充值金额：</label><div>
                        <input name="money" id="money" class="form-control" type="text" placeholder="请输入充值金额" value="">
                        <span id="errmoney" class="error"></span>
                    </div>
                </li>
                <li>
                    <label class="lbt"><em>(*)</em>实际支付：</label><div>
                        <input name="paymoney" id="paymoney" class="form-control" type="text" placeholder="请输入实际支付金额" value="">
                        <span id="errpaymoney" class="error"></span>
                    </div>
                </li>
                <li>
                    <label class="lbt"><em>(*)</em>支付方式：</label><div>
                        <select name="paytype" id="paytype" class="form-control" style="height:36px;">
                            <option value="">请选择</option>
                            <option value="1">现金</option>
                            <option value="2">微信</option>
                            <option value="3">支付宝</option>
                            <option value="6">其他</option>
                        </select>
                        <span id="errpaytype" class="error"></span>
                    </div>
                </li>
                <li><label class="lbt">说明：</label><div><textarea name="remark" id="remark" class="form-textarea confiem_remarks_information" style="height:60px;" cols="" rows=""></textarea></div></li>
            </ul>
            <div class="padt" style="text-align: center"><a href="javascript:;" class="btn btnyes yunmall_button">保存</a></div>
        </form>
    </div>
    <script>
        function isValid() {
            var result = true;
            result = IsValueNotEmpty("money", "errmoney", "充值金额") && result;
            result = IsValueNotEmpty("paymoney", "errpaymoney", "实际支付金额") && result;
            result = IsValueNotEmpty("paytype", "errpaytype", "支付方式") && result;
            result = result && IsValueDecimal("money", "errmoney", "充值金额");
            result = result && IsValueDecimal("paymoney", "errpaymoney", "实际支付金额");
            return result;
        }
    </script>
</body>
</html>
