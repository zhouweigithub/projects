.topView {
  display: block;
  height: 100px;
}

.topView, .yearsView {
  margin-bottom: 10px;
}


.vbody>view {
  /* background-color: #eaf8dd; */
}

.topView .headimgView {
  display: block;
  padding: 20px;
  /* box-sizing: border-box; */
  float: left;
}

.topView .headimgView image {
  /* width: 100%; */
  width: 60px;
  height: 60px;
}

.topView .headtextView {
  float: left;
  display: block;
  height: 60px;
  padding: 20px 0;
  /* box-sizing: border-box; */
  line-height: 60px;
  font-size: 30px;
  font-family: '黑体';
}

.yearsView {
  padding: 10px;
}

.yearsView>view {
  width: 80px;
  height: 70px;
  line-height: 70px;
  text-align: center;
  display: inline-block;
  border: thin solid #c2d8a4;
  margin-right: -1px;
  margin-bottom: -1px;
}
