.vbody {
  margin: 10px;
  padding: 10px;
  text-align: center;
  display: block;
}

.vbody textarea {
  display: block;
  width: 100%;
  height: 150px;
  border: solid thin #248311;
  text-align: left;
  margin-bottom: 10px;
  padding: 5px;
  box-sizing: border-box;
}

.vbody button {
  width: 100%;
}

.alertview {
  top: 100px;
}

.errmsg {
  color: red;
  display: block;
  text-align: left;
  margin-bottom: 10px;
}
