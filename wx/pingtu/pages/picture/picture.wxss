page {
  text-align: center;
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
  font-size: 15px;
}

view {
  text-align: center;
}

.tip {
  padding: 20px 10px 10px 10px;
}

.tip text {
  display: block;
  color: green;
  text-align: justify;
  border: solid green 1px;
}

.top {
  padding: 10px;
  font-family: '黑体';
  text-align: left;
  font-size: 17px;
}

.top .difText {
  font-weight: bold;
  font-size: 1.2em;
}

.top .difficulty {
  width: 60px;
  display: inline-block;
  background-color: #edece8;
  margin-left: 10px;
  padding: 3px;
}

.top .difficultySelected {
  background-color: red;
  color: white;
}

.containerView {
  width: 100%;
  height: 100%;
}

.pictureView {
  display: block;
  float: left;
}

.pictureView image {
  margin-right: 0px;
  margin-bottom: 0px;
  border: solid 1px grey;
  box-shadow: 3px 3px 3px grey;
  display: block;
}

.pictureView .imageSelected {
  border: solid 1px red;
  box-shadow: 3px 3px 3px red;
}

.footer {
  display: block;
  width: 100%;
  height: 50px;
  line-height: 50px;
  float: left;
  text-align: center;
}
