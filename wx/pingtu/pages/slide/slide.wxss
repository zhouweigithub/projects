page {
  text-align: center;
}

view {
  text-align: center;
}

.view_main {
  text-align: left;
  box-shadow: 3px 3px 3px grey;
}

.piece {
  display: inline-block;
  position: absolute;
  background-repeat: no-repeat;
  z-index: 400;
}

.view_top {
  width: 80%;
  display: block;
  text-align: center;
  margin: auto;
}

.view_top_left {
  font-family: '黑体';
  display: block;
  text-align: left;
  float: left;
}

.view_top_left text {
  color: green;
  clear: both;
}

.view_top_left .currentTime {
  font-weight: bold;
  display: block;
}

.view_top_right {
  display: block;
  text-align: right;
  background-repeat: no-repeat;
  box-shadow: 3px 3px 3px grey;
  float: right;
}

.time_view {
  display: inline-block;
  border: solid green 1px;
  box-shadow: 3px 3px 3px grey;
}

.time_view text {
  padding: 10px;
  display: block;
}

.time_view .boldText {
  background-color: green;
  color: white;
}

.time_view .currentTime {
  color: green;
}

.winView {
  margin: auto;
  text-align: center;
  display: block;
  position: absolute;
  width: 250px;
  background-color: rgb(255, 255, 255);
  box-sizing: border-box;
  z-index: 600;
}

.winView label {
  display: block;
}

.fullscreamView {
  width: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 500;
  background-color: rgba(36, 34, 34, 0.597);
  overflow: hidden;
}

.dialog_content_view {
  width: 100%;
  padding: 20px 10px;
  box-sizing: border-box;
  font-size: 1.2em;
  color: red;
  font-family: '黑体';
  font-weight: bold;
}

.dialog_button_view {
  width: 100%;
  height: 40px;
  padding: 0;
  font-family: '黑体';
}

.dialog_button_view_left {
  display: inline-block;
  width: 50%;
  height: 100%;
  background-color: green;
  color: white;
  line-height: 40px;
}

.dialog_button_view_right {
  display: inline-block;
  width: 50%;
  height: 100%;
  background-color: hsla(0, 7%, 58%, 0.39);
  color: black;
  line-height: 40px;
}

.buttons button {
  margin: 0 2px;
}

.modelView {
  position: absolute;
  width: 80%;
  display: block;
  top: 20%;
  left: 10%;
  z-index: 600;
  background-color: rgb(255, 255, 255);
  box-sizing: border-box;
  overflow: scroll;
  border: solid 1px grey;
}

.modelView .name {
  display: block;
  margin: 15px 15px 0px 15px;
  line-height: 40px;
  font-size: 25px;
  color: black;
}

.modelView .comment {
  display: block;
  color: grey;
  font-size: 13px;
  line-height: 18px;
  margin: 0px 15px 15px 15px;
}

.modelView .modelSingleContainer {
  border: solid 1px grey;
  margin: 10px;
}

.modelView .currentModel {
  border: solid 1px green;
  background-color: rgba(172, 255, 47, 0.493);
}

.adView {
  width: 80%;
  text-align: center;
  margin: 10px auto auto auto;
  box-shadow: 3px 3px 3px grey;
}

.btnModel {
  background-color: blueviolet;
  color: white;
}

.setting {
  background-color: dodgerblue;
  color: white;
}
